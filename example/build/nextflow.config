includeConfig "../test.config"

params {
    samplesheet = "samplesheet.csv"

    benchmark_hvgs = 100
    cell_cycle = true

    celltypist_model = "Cells_Intestinal_Tract.pkl"
    integration_methods = ["scvi", "scanvi", "harmony", "combat"]
}

process {
    executor = "local"
    withName: SC_HPL_LEARN {
        ext.use_gpu = true
    }

    withName: SC_HPL_PREDICT {
        ext.use_gpu = true
    }
}

apptainer.runOptions = "--nv"